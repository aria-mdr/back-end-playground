<div	class="row">
    <div	class="col-md-12">
    	<h2>Employees
            <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a>
        </h2> 
        <hr/>
       <table class="table ">
            <thead>
            <tr>
                <th>Employee&nbsp;Num</th>
                <th>Full&nbsp;Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Manager&nbsp;ID</th>
                <th>Status</th>
                <th>Department</th>
                <th>Hired&nbsp;On</th>
            </tr>
            </thead>
            <tbody>
                    {{#each employee}}
                    {{#employees}}  {{this}} {{/employees}}
                    {{/each}}
                </tbody>
            </table>
    </div>
        {{#unless employee}}
            <div	class="col-md-12	text-center">
                <strong>{{message}}</strong>	
            </div>	
        {{/unless}}
</div>	